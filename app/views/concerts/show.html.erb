<table class="table">

  <thead>
    <tr>
      <th>演奏会名</th>
      <th>日程</th>
      <th>会場</th>
      <th>最寄り駅</th>
      <th>お問い合わせ</th>
      <th>演奏曲目</th>
      <th colspan="12"></th>
    </tr>
  </thead>

  <% day_title = 0 %>
  <% @concerts.each do |concert| %>

  <% unless concert.day == day_title %>
  <% day_title = concert.day %>a
      <tbody>
      <td><h1><%= day_title %>日</h1></td>
    </tbody>
  <% end %>

  <tbody>
    <tr>
      <td>
        <ul style="list-style:none;">
         <% concert.name.each do |name_list| %>
          <li><%= name_list %></li>
         <% end %>
        </ul>
      </td>
      <td>
        <ul style="list-style:none;">
          <% concert.program.each do |program_list| %>
           <li><%= program_list %></li>
          <% end %>
        </ul>
      </td>
      <td><%= concert.stage %></td>
      <td><%= concert.station %></td>
      <td>
        <% unless concert.information.empty? %>
          <%= link_to '楽団HP',  concert.information, :target=>["_blank"] %>
        <% end %>
      </td>
      <td>
        <ol>
          <% concert.content.each do |content_list| %>
            <li><%= content_list %></li>
          <% end %>
        </ol>
      </td>
      <td colspan="12"></td>
    </tr>
  </tbody>
  <% end %>
</table>


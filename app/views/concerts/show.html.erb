<h1><%= @access.train %></h1>

<table class="table">
  <tr>
    <td><%= link_to '1月', concert_jan_path %></td>
    <td><%= link_to '2月', concert_feb_path %></td>
    <td><%= link_to '3月', concert_mar_path %></td>
    <td><%= link_to '4月', concert_apr_path %></td>
    <td><%= link_to '5月', concert_may_path %></td>
    <td><%= link_to '6月', concert_jun_path %></td>
    <td><%= link_to '7月', concert_jul_path %></td>
    <td><%= link_to '8月', concert_aug_path %></td>
    <td><%= link_to '9月', concert_sep_path %></td>
    <td><%= link_to '10月', concert_oct_path %></td>
    <td><%= link_to '11月', concert_nov_path %></td>
    <td><%= link_to '12月', concert_dec_path %></td>
    <td><%= link_to '一覧に戻る', concerts_path %></td>
  </tr>
</table>

<table class="table">

  <thead>
    <tr>
      <th>楽団名</th>
      <th>本番日程</th>
      <th>会場</th>
      <th>住所</th>
      <th>連絡先</th>
      <th>曲目</th>
      <th colspan="12"></th>
    </tr>
  </thead>

  <tbody>
    <% @concerts.each do |concert| %>
      <tr>
        <td><%= concert.name %></td>
        <td><%= concert.program %></td>
        <td><%= concert.stage %></td>
        <td><%= concert.map %></td>
        <td><%= concert.information %></td>
        <td><%= concert.content %></td>
        <td colspan="12"></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p><%= link_to '一覧に戻る', concerts_path %></p>
